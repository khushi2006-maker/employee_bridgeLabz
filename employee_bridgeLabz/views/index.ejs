<!DOCTYPE html>
<html>
<head>
    <title>Employee Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<h1>Employee Payroll Dashboard</h1>

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Department</th>
        <th>Basic Salary</th>
        <th>Tax (12%)</th>
        <th>Net Salary</th>
    </tr>

    <% employees.forEach(emp => { %>
        <% 
            let tax = emp.basicSalary * 0.12;
            let netSalary = emp.basicSalary - tax;
        %>

        <tr>
            <td><%= emp.id %></td>
            <td><%= emp.name %></td>
            <td><%= emp.department %></td>
            <td>₹ <%= emp.basicSalary %></td>
            <td>₹ <%= tax %></td>
            <td>₹ <%= netSalary %></td>
        </tr>
    <% }) %>
</table>

</body>
</html>